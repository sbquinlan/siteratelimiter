{
	"name": "Site Timers",
	"version": "0.0.0",
	"description": "A browser extension that on allows a certain amount of time per domain",
	"homepage_url": "https://github.com/sbquinlan",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
		"128": "icons/icon128.png"
	},
	"permissions": [
    "activeTab",
		"storage",
    "tabs"
	],
  "browser_action": {
    "browser_style": true,
    "chrome_style": true,
    "default_title": "Site Timers",
    "default_popup": "popup.html"
  },
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	}
}
